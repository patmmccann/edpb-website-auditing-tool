{
  "name": "website-audit",
  "version": "1.3.0",
  "author": "EDPB <jgorin@protonmail.com>",
  "license": "EUPL-1.0",
  "main": "electron/main.js",
  "repository": "https://code.europa.eu/spe/website-audit.git",
  "homepage": "https://code.europa.eu/spe/website-audit",
  "description": "Website auditing tool",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p electron:serve-tsc ng:serve electron:serve",
    "ng:serve": "ng serve",
    "ng:test": "ng test",
    "build": "tsc -p app/tsconfig.prod.json && ng build --base-href ./ && npx webpack --config webpack.config.js",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "watch": "ng build --watch --configuration development",
    "test": "npm run build && npm-run-all -p ng:test e2e",
    "electron:serve-tsc": "tsc --watch --project ./app",
    "electron:serve": "wait-on tcp:4200 && electron .",
    "electron:start": "ng build --base-href ./ && electron .",
    "electron:mac": "npm run build && electron-builder -m --publish=never",
    "electron:win": "npm run build && electron-builder -w --publish=never",
    "electron:linux": "npm run build && electron-builder -l --publish=never",
    "e2e": "npx playwright test",
    "e2e:report": "npx playwright show-report",
    "e2e:ui": "npx playwright test --ui"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.6",
    "@angular/cdk": "~19.0.1",
    "@angular/common": "^19.1.6",
    "@angular/compiler": "^19.1.6",
    "@angular/core": "^19.1.6",
    "@angular/forms": "^19.2.8",
    "@angular/material": "~20.1.3",
    "@angular/platform-browser": "^19.1.6",
    "@angular/platform-browser-dynamic": "^19.2.8",
    "@angular/router": "^19.2.8",
    "@ghostery/adblocker": "^2.5.1",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@types/filewriter": "^0.0.33",
    "@types/got": "^9.6.12",
    "@types/har-format": "^1.2.16",
    "angular-split": "^16.2.1",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "font-awesome": "^4.7.0",
    "foundation-sites": "^6.9.0",
    "fs-extra": "^11.3.0",
    "github-markdown-css": "^5.8.1",
    "got": "^11.8.6",
    "html-to-docx": "^1.8.0",
    "html2canvas": "^1.4.1",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.3",
    "rxjs": "~7.8.1",
    "stacktrace-js": "^2.0.2",
    "tinymce": "^7.8.0",
    "tmp": "^0.2.3",
    "tough-cookie": "^4.1.4",
    "tslib": "^2.3.0",
    "winston": "^3.17.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.9",
    "@angular/cli": "~19.2.9",
    "@angular/compiler-cli": "^19.2.8",
    "@electron/notarize": "^2.5.0",
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.52.0",
    "@types/chrome": "^0.0.269",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jasmine": "~5.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.17.30",
    "electron": "^34.5.3",
    "electron-builder": "^24.13.3",
    "electron-debug": "^3.2.0",
    "electron-notarize": "^1.2.2",
    "electron-playwright-helpers": "^1.7.1",
    "electron-reloader": "^1.2.3",
    "jasmine-core": "~5.1.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright": "^1.39.0",
    "typescript": "^5.8.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.99.6",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.edpb.wat ",
    "afterSign": "./scripts/notarize.js",
    "dmg": {
      "sign": false
    },
    "directories": {
      "output": "releases",
      "buildResources": "resources"
    },
    "files": [
      "electron/**/*",
      "assets/**/*",
      "dist/**/*"
    ],
    "linux": {
      "category": "Utility",
      "target": "deb"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "resources/icons/512x512.png",
      "verifyUpdateCodeSignature": false,
      "publisherName": "EDPB"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "icon": "resources/icons/512x512.png",
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "category": "public.app.category.productivity",
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      }
    }
  }
}
