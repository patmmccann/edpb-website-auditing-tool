{
  "name": "website-audit",
  "version": "1.0.0",
  "author": "jgorin <jgorin@protonmail.com>",
  "license": "GPLV3",
  "main": "electron/main.js",
  "repository": "https://github.com/gorinje/website-audit3.git",
  "description": "Website auditing tool",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:start": "ng build --base-href ./ && electron .",
    "electron:mac": "ng build --base-href ./ && electron-builder -m --publish=never",
    "electron:win": "ng build --base-href ./ && electron-builder -w --publish=never",
    "electron:linux": "ng build --base-href ./ && electron-builder -l --publish=never"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/cdk": "~14.2.2",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/material": "~14.2.2",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "@cliqz/adblocker": "^1.25.1",
    "angular-split": "^14.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "font-awesome": "^4.7.0",
    "foundation-sites": "^6.7.5",
    "fs-extra": "^10.1.0",
    "git-describe": "^4.1.1",
    "github-markdown-css": "^5.1.0",
    "got": "^11.8.3",
    "html-docx-js": "^0.3.1",
    "js-yaml": "^4.1.0",
    "pug": "^3.0.2",
    "rxjs": "~7.5.0",
    "stacktrace-js": "^2.0.2",
    "tinymce": "^6.2.0",
    "tldts-experimental": "^5.7.97",
    "tmp": "^0.2.1",
    "tough-cookie": "^4.1.2",
    "tslib": "^2.3.0",
    "winston": "^3.8.2",
    "xlsx": "^0.18.5",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular/cli": "~14.2.1",
    "@angular/compiler-cli": "^14.0.0",
    "@types/jasmine": "~4.0.0",
    "@types/js-yaml": "^4.0.5",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.7.2"
  },
  "build": {
    "directories": {
      "buildResources": "electron/icons",
      "output": "electron/releases"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "electron/icons/512x512.png",
    "verifyUpdateCodeSignature": false,
    "publisherName": "EDPB"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "icon": "electron/icons/512x512.png",
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist",
    "category": "public.app.category.productivity",
    "target": {
      "target": "default",
      "arch": [
        "universal"
      ]
    }
  }
}